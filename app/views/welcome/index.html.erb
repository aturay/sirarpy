<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <a href="/" class="brand">
        <!-- This is website logo -->
        <%= image_tag Setting.logo, {width: 120, height: 40} %>
      </a>
      <!-- Navigation button, visible on small resolution -->
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <i class="icon-menu"></i>
      </button>
      <!-- Main navigation -->
      <div class="nav-collapse collapse pull-right">
        <ul class="nav" id="top-navigation">
          <li class="active"><a href="#home"><%= t :home %></a></li>
          <li><a href="#service"><%= t :services %></a></li>
          <li><a href="#portfolio"><%= t :portfolio %></a></li>
          <li><a href="#about"><%= t :about %></a></li>
          <li><a href="#clients"><%= t :clients %></a></li>
          <li><a href="#price"><%= t :price %></a></li>
          <li><a href="#contact"><%= t :contact %></a></li>
        </ul>
      </div>
      <!-- End main navigation -->
    </div>
  </div>
</div>

<!-- Start home section -->
<div id="home">
  <!-- Start cSlider -->
  <div id="da-slider" class="da-slider">
    <div class="triangle"></div>
    <!-- mask elemet use for masking background image -->
    <div class="mask"></div>
    <!-- All slides centred in container element -->
    <div class="container">
      <!-- Start first slide -->
      <% @sliders.each do |item| %>
        <div class="da-slide">
          <h2 class="fittext2"><%= item.title %></h2>
          <h4><%= item.sub_title %></h4>
          <p><%= item.description %></p>
          <a href="#" class="da-link button"><%= t :button_read_more %></a>
          <div class="da-img">
            <%= image_tag item.image.url(:medium), width: "320" %>
          </div>
        </div>
      <% end %>
      <!-- End first slide -->
      <!-- Start cSlide navigation arrows -->
      <div class="da-arrows">
        <span class="da-arrows-prev"></span>
        <span class="da-arrows-next"></span>
      </div>
      <!-- End cSlide navigation arrows -->
    </div>
  </div>
</div>
<!-- End home section -->

<!-- Service section start -->
<div class="section primary-section" id="service">
  <div class="container">
    <!-- Start title section -->
    <div class="title">
      <h1><%= t :what_We_do %></h1>
      <!-- Section's title goes here -->
      <p><%= t :wwd_description %></p>
      <!--Simple description for section goes here. -->
    </div>
    <div class="row-fluid">
      <% @we_dos.each do |we_do| %>
        <div class="span4">
          <div class="centered service">
            <div class="circle-border zoom-in">
              <%= image_tag we_do.icon(:medium), class: 'img-circle' %>
            </div>
            <h3><%= we_do.title %></h3>
            <p><%= we_do.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Service section end -->

<!-- Portfolio section start -->
<div class="section secondary-section " id="portfolio">
  <div class="triangle"></div>
  <div class="container">
    <div class=" title">
      <h1><%= t :our_works %></h1>
      <p><%= t :our_works_description %></p>
    </div>
    <ul class="nav nav-pills">
      <li class="filter" data-filter="all">
        <a href="#noAction">All</a>
      </li>
      <% @types.each do |type| %>
        <li class="filter" data-filter="<%= type.title %>">
          <a href="#noAction"><%= type.title %></a>
        </li>
      <% end %>
    </ul>
    <!-- Start details for portfolio project 1 -->
    <div id="single-project">
      <% @products.each do |product| %>
        <div id=<%= "slidingDiv#{product.id}"%> class="toggleDiv row-fluid single-project">
          <div class="span6">
            <%= image_tag product.public_image_url %>
          </div>
          <div class="span6">
            <div class="project-description">
              <div class="project-title clearfix">
                <h3><%= product.title %></h3>
                <span class="show_hide close">
                  <i class="icon-cancel"></i>
                </span>
              </div>
              <div class="project-info">
                <div><span><%= t :master %></span><%= product.master_name %></div>
                <div><span><%= t :price  %></span><%= product.price %></div>
                <div><span><%= t :type   %></span><%= product.type.title %></div>
                <div><span><%= t :link   %></span><%= product.master_social_url %></div>
              </div>
              <p><%= product.description %></p>
            </div>
          </div>
        </div>
      <% end %>
      <!-- End details for portfolio project 1 -->
      <ul id="portfolio-grid" class="thumbnails row">
        <% @products.each do |product| %>
          <li class="span4 mix <%= product.type.title %>">
            <div class="thumbnail">
              <%= image_tag product.public_image_icon %>
              <a href="#single-project" class="more show_hide" rel=<%= "#slidingDiv#{product.id}" %> >
                <i class="icon-plus"></i>
              </a>
              <h3><%= product.title %></h3>
              <p><%= product.type.title %></p>
              <div class="mask"></div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<!-- Portfolio section end -->

<!-- About us section start -->
<div class="section primary-section" id="about">
  <div class="triangle"></div>
  <div class="container">
    <div class="title">
      <h1><%= t :who_we_are %></h1>
      <p><%= t :wwa_description %></p>
    </div>

    <div class="row-fluid team">
      <% @staffs.each do |user| %>
        <div class="span4" id="first-person">
          <div class="thumbnail">
            <%= image_tag user.picture(:public) %>
            <h3><%= user.full_name %></h3>
            <ul class="social">
              <li>
                <a href="">
                  <span class="icon-facebook-circled"></span>
                </a>
              </li>
              <li>
                <a href="">
                  <span class="icon-twitter-circled"></span>
                </a>
              </li>
              <li>
                <a href="">
                  <span class="icon-linkedin-circled"></span>
                </a>
              </li>
            </ul>
            <div class="mask">
              <h2><%= t :mask %></h2>
              <p><%= t :mask_text %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="about-text centered">
      <h3><%= t :about_us %></h3>
      <p><%= t :au_description %></p>
    </div>
    <h3><%= t :skills %></h3>
    <div class="row-fluid">
      <div class="span6">
        <ul class="skills">
          <% @skills.each do |skill| %>
            <li>
              <span class="bar" data-width="<%= skill.progress %>%"></span>
              <h3><%= skill.title %></h3>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="span6">
        <div class="highlighted-box center">
          <h1><%= t :We_are_hiring%></h1>
          <p><%= t :wha_text %></p>
          <button class="button button-sp"><%= t :button_join_us%></button>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="section secondary-section">
  <div class="triangle"></div>
  <div class="container centered">
    <p class="large-text"><%= t :au_text %></p>
    <a href="#" class="button"><%= t :button_purshase_now %></a>
  </div>
</div>
<!-- About us section end -->

<!-- Client section start -->
<div id="clients">
  <div class="section primary-section">
    <div class="triangle"></div>
    <div class="container">
      <div class="title">
        <h1><%= t :what_client_say %></h1>
        <p><%= t :wcs_description %></p>
      </div>
      <div class="row">
        <% @feedbacks.each do |item| %>
          <% customer = item.customer %>
          <div class="span4">
            <div class="testimonial">
              <p>"<%= item.message %>"</p>
              <div class="whopic">
                <div class="arrow"></div>
                <img src="<%= image_path 'Client1.png' %>" class="centered" alt="client 1">
                <strong><%= customer.fullname %>
                  <small><%= t :text_client %></small>
                </strong>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <p class="testimonial-text">"<%= t :wcs_note %>"</p>
    </div>
  </div>
</div>

<div class="section third-section">
  <div class="container centered">
    <div class="sub-section">
      <div class="title clearfix">
        <div class="pull-left">
          <h3><%= t :our_clients %></h3>
        </div>
        <ul class="client-nav pull-right">
          <li id="client-prev"></li>
          <li id="client-next"></li>
        </ul>
      </div>
      <ul class="row client-slider" id="clint-slider">
        <% @customers.each do |customer| %>
          <li>
            <%= link_to customer.photo(:origin) do %>
              <%= image_tag customer.photo(:medium), title: "#{customer.fullname}", alt: "#{customer.fullname}" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- Price section start -->
